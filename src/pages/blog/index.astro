---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}		
			.title {
				margin: auto;
				color: rgb(var(--black));
				line-height: 1;
			}
			.description {
				margin: 0;
				color: black;
			}
			.li1 {
				background-image: url("../../images/Paella.jpg");
				background-size: cover;
				padding: 15%;
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>				
					<ul>
						<li class="li1">
							<a href="" class="rounded-md p-4 m-auto">									
								<h2 class="title font-serif font-bold underline">La sainte carte</h4>				
							</a>
						</li>

						<li class="bg-slate-50 rounded-md p-4 m-auto">
							<a href="" class="">									
								<h2 class="title font-serif underline">Paellissou</h4>
								<h3 class="description font-sans">
									Le don des saintes paelleras
								</p>
							</a>
							<span class="text-black">15 €</span>
						</li>

						<li class="bg-slate-50 rounded-md p-4 m-auto">
							<a href="" class="">									
								<h2 class="title font-serif underline">Rikinouri</h4>
								<h3 class="description font-sans">
									Cuit dans l'eau du Gange
								</p>
								<span class="text-black">10 €</span>
							</a>
						</li>

						<li class="bg-slate-50 rounded-md p-4 m-auto">
							<a href="" class="">									
								<h2 class="title font-serif underline">La riz</h4>
								<h3 class="description font-sans">
									Porte chance, no fakent
								</p>
							</a>
							<span class="text-black">10 €</span>
						</li>
					</ul>										
			</section>
		</main>
		<Footer />
	</body>
</html>
